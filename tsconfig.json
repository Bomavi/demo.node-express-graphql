{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "rootDirs": ["./src"],
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["*"]
        },
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}